<li class='event-card event-in-favorite' data-id='{{id}}' id="event-{{id}}">
  <div class='event-image-wrapper'>
    <img class='event-image' src='{{eventImages.1.url}}' alt='{{name}} poster' />
  </div>
  <div class='event-data-wrapper'>
    <p class='event-title'>{{name}}</p>
    <div class='event-data'>
      <p class='add-to-favorite-date'>{{date}}</p>
      <p class='add-to-favorite-place'><i class="fas fa-map-marker-alt"></i>{{city}}</p>
    </div>
  </div>
</li>
